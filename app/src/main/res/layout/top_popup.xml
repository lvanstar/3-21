<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/wardrobe_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/wardrobe_rl"
        android:orientation="vertical"
        android:background="@color/font19">
        <RelativeLayout
            android:id="@+id/wardrobe_R_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/wardrobe_tv001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常衣橱"
                android:textSize="@dimen/big_size"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/wardrobe_select_iv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wardrobe_select"
                android:scaleType="fitCenter"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/wardrobe_tv001"/>

        </RelativeLayout>
      <View
          android:layout_width="wrap_content"
          android:layout_height="0.3dp"
          android:background="@color/font23"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"/>
        <RelativeLayout
            android:id="@+id/wardrobe_VIP_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/wardrobe_tv002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP衣橱"
                android:textSize="@dimen/big_size"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/wardrobe_select_iv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wardrobe_select"
                android:scaleType="fitCenter"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_toRightOf="@+id/wardrobe_tv002"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>