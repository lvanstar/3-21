<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    style="@style/Title"
    android:background="@color/title_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/fragment_find_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fragment_find_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:layout_centerInParent="true"
                android:textSize="@dimen/middle_size"
                android:textColor="@color/font19"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/font19"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_attion_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fragment_attion_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_centerInParent="true"
                android:textSize="@dimen/middle_size"
                android:textColor="@color/font20"/>
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/fragment_find_show_iv"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:src="@mipmap/find_input"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"/>
</RelativeLayout>

    <com.qiansong.msparis.app.commom.selfview.CustomViewPager
        android:id="@+id/fragment_find_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>