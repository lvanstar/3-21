<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_easy_return_clothes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qiansong.msparis.app.mine.activity.EasyReturnClothesActivity">
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line"/>

    <ScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f1f1f1"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发货人信息"
                android:textColor="@color/font19"
                android:textSize="11sp"
                android:padding="6dp"
                android:gravity="center_vertical"/>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:id="@+id/set_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/address"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@mipmap/find_address"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/contact_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font19"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:text=""/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/contact_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font20"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:text=""/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/region_name"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font19"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:text=""/>
                        <TextView
                            android:id="@+id/address_detail"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font19"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:text=""/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@mipmap/right_back"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/no_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/add_quan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/font20"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:text="添加我的收货地址"/>
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/right_back"/>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="快递公司"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/font19"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="顺风"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/font20"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_back"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:onClick="showSelect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="预约上门取件时间"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/font19"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2017-01-10 16:30"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/font20"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_back"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f1f1f1"/>
            <include layout="@layout/line_thin"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/mine_bage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/font19"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:text="租赁日期：2017/1/12-2017/1/14"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="3dp"
                        android:background="@drawable/ysf_audio_cancel_record_red_bg"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="一键还衣"/>
                </LinearLayout>
                <include layout="@layout/line"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:focusable="false"
                    android:layout_centerVertical="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/mine_zhuyi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/font20"
                        android:layout_marginLeft="10dp"
                        android:text="请连同环保袋一同归还，编号：0000000000"
                        android:textSize="8sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/to_return"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:text="确认还衣"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/font19"
        android:textSize="15sp"/>
    <View
        android:id="@+id/mengban"
        android:onClick="hide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>
</RelativeLayout>
