<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/appointment_layout"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!--地址显示-->
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--横的线-->
    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/appointment_lay_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_textview_color_violet"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_day_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="今天"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/appointment_time_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02-10"
                android:textColor="@color/white"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_lay_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_textview_color_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_day_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="明天"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/appointment_time_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02-10"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_lay_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_textview_color_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_day_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="后天"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/appointment_time_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02-10"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appointment_lay_4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_textview_color_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_day_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="更多"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/appointment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:visibility="visible" />
</LinearLayout>