<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qiansong.msparis.app.wardrobe.activity.PaymentResultsActivity">
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line"/>
    <ImageView
        android:id="@+id/pay_img"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/pay_fail"/>
   <TextView
       android:id="@+id/pay_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="支付失败"
       android:gravity="center"
       android:textSize="15sp"
       android:paddingTop="10dp"
       android:paddingBottom="11dp"
       android:textColor="@color/font19"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10001"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/font19"/>
  <include layout="@layout/line_thin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付订单: "
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:textColor="@color/font19"/>
</LinearLayout>
