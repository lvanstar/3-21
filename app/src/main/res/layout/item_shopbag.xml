<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <LinearLayout

            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/select"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@mipmap/select_0"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="105dp"
                android:background="@mipmap/homepage_eg_3"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="气质条纹披肩外套"
                    android:textSize="@dimen/middle_size"
                    android:textColor="#686868"/>
                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌名称"
                    android:textSize="@dimen/mini_size"
                    android:textColor="#a4a4a4"/>
                <TextView
                    android:id="@+id/specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXL"
                    android:textSize="@dimen/mini_size"
                    android:textColor="#a4a4a4"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起租时间 2016-12-30"
                    android:textSize="@dimen/mini_size"
                    android:textColor="#a4a4a4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="归还时间 2017-1-2"
                    android:textSize="@dimen/mini_size"
                    android:textColor="#a4a4a4"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/shixiao"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/mengban"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/shixiao" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/add_quan">
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加一件日常衣服"
            android:textSize="@dimen/mini_size"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="@color/font19"/>
    </LinearLayout>
</LinearLayout>