<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fullDress_Ll">
    <!--礼服主页-->
    <RelativeLayout
        android:id="@+id/fullDress_title_Rl"
        style="@style/Title"
        android:background="@color/title_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font19"
            android:textSize="@dimen/big_size"
            android:layout_centerInParent="true"
            android:text="礼服日租"/>

        <ImageView
            android:id="@+id/fullDress_remmend_Iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/remmend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/fullDress_calander_Iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/full_calander"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/fullDress_addCart_Iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/full_gwc"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/sku_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"/>
    <TextView
        android:id="@+id/fullDress_nothingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="@color/font20"
        android:textSize="@dimen/middle_size"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>


</LinearLayout>