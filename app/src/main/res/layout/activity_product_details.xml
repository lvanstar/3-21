<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/product_ll">

    <RelativeLayout
        style="@style/Title"
        android:background="@color/title_bg">
        <include
            layout="@layout/layout_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服装产品详情"
            android:layout_centerInParent="true"
            android:textColor="@color/font19"
            android:textSize="@dimen/big_size"/>
        <ImageView
            android:id="@+id/product_collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/full_gwc"/>
    </RelativeLayout>

    <com.qiansong.msparis.app.commom.selfview.observableScrollViewo.ObservableScrollView
        android:id="@+id/pro_hs_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.qiansong.msparis.app.homepage.view.MSParisCarouselView
                    android:id="@+id/product_details_carouse"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    app:canLoop="true"/>
                <TextView
                    android:id="@+id/pro_xianding_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秋冬限定款"
                    android:background="@drawable/gray_round_shap"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/small_size"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/pro_vip_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/vip"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/pullDress_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="299.00/天"
                    android:textColor="@color/font19"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/middle_size"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/pro_iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/pro_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_no"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pro_tv_productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="海蓝色休闲棉质长袖连衣裙"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/big_size"/>

                <TextView
                    android:id="@+id/pro_tv_productSku"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="衣服的sku"
                    android:gravity="right"
                    android:textColor="@color/font20"
                    android:textSize="@dimen/mini_size"/>
            </LinearLayout>


            <com.qiansong.msparis.app.fulldress.view.HorizontalListView
                android:id="@+id/pro_Tags_recycler"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pro_hs_size"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/pro_iv_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/about" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/pro_tv_addCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/font19"
                    android:gravity="center"
                    android:text="加入购物袋"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/big_size"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pro_tv_brand_Ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="品牌"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/middle_size"/>

                <TextView
                    android:id="@+id/pro_tv_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font20"
                    android:textSize="@dimen/small_size"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_back"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="市场价"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/middle_size"/>

                <TextView
                    android:id="@+id/pro_tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="¥2499.00"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font20"
                    android:textSize="@dimen/small_size"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="面料"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/middle_size"/>

                <TextView
                    android:id="@+id/pro_tv_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="较薄"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font20"
                    android:textSize="@dimen/small_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/product_pinglunLl"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font19"
                    android:textSize="@dimen/middle_size"
                    android:layout_gravity="center_vertical"
                    android:text="评价" />

                <TextView
                    android:id="@+id/pro_tv_appraisal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4)"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/small_size"
                    android:textColor="@color/font20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_details_pinlun_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/balck_circle_shap">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="满意度"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_size"
                                android:layout_gravity="center_horizontal"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/product_details_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="99"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/middle_size"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/product_details_number"
                                    android:text="%"
                                    android:textColor="@color/white"
                                    android:layout_centerVertical="true"
                                    android:textSize="@dimen/middle_size"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺码正好"
                            android:textColor="@color/font20"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/mini_size"/>
                        <com.qiansong.msparis.app.wardrobe.selfview.NumberProgressBar
                            android:id="@+id/pro_hs_progressBar01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:progress_text_size="@dimen/mini_size"
                            app:progress_reached_color="@color/font19"
                            app:progress_text_color="@color/font20"
                            app:progress_unreached_color="@color/font20"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺码偏小"
                            android:textColor="@color/font20"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/mini_size"/>

                        <com.qiansong.msparis.app.wardrobe.selfview.NumberProgressBar
                            android:id="@+id/pro_hs_progressBar02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:progress_text_size="@dimen/mini_size"
                            app:progress_reached_color="@color/font19"
                            app:progress_text_color="@color/font20"
                            app:progress_unreached_color="@color/font20"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺码偏大"
                            android:textColor="@color/font20"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/mini_size"/>

                        <com.qiansong.msparis.app.wardrobe.selfview.NumberProgressBar
                            android:id="@+id/pro_hs_progressBar03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:progress_text_size="@dimen/mini_size"
                            app:progress_reached_color="@color/font19"
                            app:progress_text_color="@color/font20"
                            app:progress_unreached_color="@color/font20"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--这边是一个评价listview-->
            <com.qiansong.msparis.app.wardrobe.selfview.CustomListView
                android:id="@+id/product_comments_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:id="@+id/product_Nocomments"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="3.5"
                    android:background="@color/xian"
                    android:layout_gravity="center_vertical"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无评价"
                        android:textColor="@color/font20"
                        android:textSize="@dimen/middle_size"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="3.5"
                    android:background="@color/xian"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/product_more_tv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="查看所有评论"
                android:textColor="@color/font19"
                android:background="@drawable/gray_round_shap"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/middle_size"/>
        </LinearLayout>
    </com.qiansong.msparis.app.commom.selfview.observableScrollViewo.ObservableScrollView>

</LinearLayout>

