<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_bag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qiansong.msparis.app.wardrobe.activity.ShoppingBagActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <include android:id="@+id/back"
            layout="@layout/layout_back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/click_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/daily_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日常"
                    android:layout_centerInParent="true"
                    android:textColor="@color/font19"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/font20"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/click_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fulldress_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="礼服"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/middle_size"
                    android:textColor="@color/font20"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.qiansong.msparis.app.commom.selfview.CustomViewPager
        android:id="@+id/shopp_bag_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
