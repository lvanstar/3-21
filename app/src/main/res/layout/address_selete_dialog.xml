<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_dialog_exit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="取消"
                android:textColor="@color/font26"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/address_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="选择城市"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/address_dialog_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="确定"
                android:textColor="@color/font26"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.qiansong.msparis_android.app.mine.util.WheelView
                android:id="@+id/address_dialog_wheel_1"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <com.qiansong.msparis_android.app.mine.util.WheelView
                android:id="@+id/address_dialog_wheel_2"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <com.qiansong.msparis_android.app.mine.util.WheelView
                android:id="@+id/address_dialog_wheel_3"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>