<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <com.qiansong.msparis.app.commom.selfview.TXCirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:alpha="80"
        android:padding="10dp"
        android:visibility="visible"
        app:fillColor="@color/color_f5359b"
        app:pageColor="@color/xxlight_gray"
        app:radius="4dp"
        app:strokeWidth="0dp" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_enter_selector"
        android:gravity="center"
        android:text="立即体验"
        android:textColor="@drawable/tv_pink_selector"
        android:textSize="@dimen/big_size"
        android:visibility="gone" />
</RelativeLayout>