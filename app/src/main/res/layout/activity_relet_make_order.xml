<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relet_make_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qiansong.msparis_android.com.qiansong.msparis.app.mine.activity.ReletMakeOrderActivity">
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="租赁日期：2017/1/12-2017/1/14"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="1dp"
        android:background="#F4F4F4"
        android:textColor="@color/font19"
        android:gravity="center_vertical"/>
    <include layout="@layout/line_thin"/>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@mipmap/homepage_eg_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font19"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="[礼服装]礼服服装名称"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font19"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="￥?/3天"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font19"
                    android:textSize="11sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品牌名称品牌名称"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font20"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="租赁尺码：XS"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠券"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-￥?.00"
            android:paddingLeft="10dp"
            android:textColor="@color/ysf_red_9d3b39"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:src="@mipmap/right_back"
            android:padding="3dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    <include layout="@layout/line_thin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="总金额"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥0.00"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-￥0.00"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="会员折扣"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-￥0.00"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View  android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/xian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计:￥20"
            android:padding="10dp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/to_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交订单"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"
            android:background="#333333"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
