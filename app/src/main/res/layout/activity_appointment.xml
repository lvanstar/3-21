<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!--地址显示-->
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--横的线-->
    <include layout="@layout/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/appointment_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hvertical_spacing_sec"
                android:layout_marginTop="@dimen/hvertical_spacing_sec"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="所在城市"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <TextView
                    android:id="@+id/appointment_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择城市"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/mine_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/hvertical_spacing_sec"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="门店"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <TextView
                    android:id="@+id/appointment_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择门店"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/mine_right" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:id="@+id/appointment_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hvertical_spacing_sec"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="预约类型"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <TextView
                    android:id="@+id/appointment_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择预约类型"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/mine_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hvertical_spacing_sec"
                android:layout_marginTop="@dimen/hvertical_spacing_sec"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="试衣人数"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <TextView
                    android:id="@+id/appointment_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="最多不超过6人"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/mine_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/hvertical_spacing_sec"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="预约时间"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <TextView
                    android:id="@+id/appointment_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择预约时间"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/mine_right" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hvertical_spacing_sec"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="联系人"

                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <EditText
                    android:id="@+id/appointment_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入联系人姓名"
                    android:textColor="@color/__picker_black_40"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/middle_size" />

                <RadioGroup
                    android:id="@+id/user_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/user_radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/appointment_checkbox_bg"
                        android:button="@null"
                        android:text="女士"
                        android:textColor="@drawable/appointment_checkbox_tx"
                        android:textSize="@dimen/middle_size" />

                    <RadioButton
                        android:id="@+id/user_radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/appointment_checkbox_bg"
                        android:button="@null"
                        android:text="男士"
                        android:textColor="@drawable/appointment_checkbox_tx"
                        android:textSize="@dimen/middle_size" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hvertical_spacing_sec"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="手机号码"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <EditText
                    android:id="@+id/appointment_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:textColor="@color/__picker_black_40"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/middle_size" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="留言"
                    android:layout_gravity="center"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="@dimen/middle_size" />

                <EditText
                    android:id="@+id/appointment_text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="如有其它需求,请在这里填写"
                    android:textColor="@color/__picker_black_40"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/middle_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/appointment_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/tv_textview_black_bg"
                android:gravity="center"
                android:text="立即预约"
                android:textColor="@color/white"
                android:textSize="@dimen/big_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>