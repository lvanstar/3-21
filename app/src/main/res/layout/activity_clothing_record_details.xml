<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clothing_record_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qiansong.msparis_android.com.qiansong.msparis.app.mine.activity.ClothingRecordDetailsActivity">
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line"/>
    <com.qiansong.msparis.app.homepage.view.PullToRefreshView
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请等待快递上门取件.."
                    android:textColor="@color/font19"
                    android:textSize="15sp"
                    android:padding="37dp"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发货人信息"
                    android:textColor="@color/font20"
                    android:textSize="11sp"
                    android:padding="6dp"
                    android:layout_marginLeft="5dp"
                    android:background="#f5f4f4"
                    android:gravity="center_vertical"/>
                <include layout="@layout/line_thin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/find_address"
                        android:layout_marginLeft="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="某某某"
                                android:layout_weight="1"
                                android:textColor="@color/font19"/>
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="185****8456"
                                android:textColor="@color/font20"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:text="上海市黄浦区"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:text="新闸路831号丽都国际城"
                            android:textColor="@color/font19"/>
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/line_thin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="快递公司"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/font19"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="顺风"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/font20"/>
                </LinearLayout>
                <include layout="@layout/line_thin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="预约上门取件时间"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/font19"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2017-01-10 16:30"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/font20"/>
                </LinearLayout>
                <include layout="@layout/line_thin"/>

                <LinearLayout
                    android:onClick="editWaybill"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="运单号"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/font19"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.1dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="123456789012345678"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/font20"/>
                </LinearLayout>
                <include layout="@layout/line_thin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f1f1f1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-- 归还美衣 --"
                    android:textColor="@color/font19"
                    android:textSize="11sp"
                    android:padding="6dp"
                    android:gravity="center"/>
                <include layout="@layout/line_thin"/>
                <GridView
                    android:id="@+id/record_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"/>
            </LinearLayout>
        </ScrollView>
    </com.qiansong.msparis.app.homepage.view.PullToRefreshView>
</LinearLayout>
