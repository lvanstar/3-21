<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qiansong.msparis.app.wardrobe.activity.MakeOrderActivity">
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/line"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="配送信息"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/set_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/address"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@mipmap/find_address"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="5dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/contact_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font19"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:text=""/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/contact_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font20"
                                    android:textSize="13sp"
                                    android:gravity="center"
                                    android:text=""/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/region_name"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font19"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:text=""/>
                            <TextView
                                android:id="@+id/address_detail"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font19"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:text=""/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@mipmap/right_back"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/no_address"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/add_quan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/font20"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:text="添加我的收货地址"/>
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/right_back"/>
                    </LinearLayout>
                </LinearLayout>


                <include layout="@layout/line_thin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/yanjing"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=" 租赁日期："
                        android:paddingLeft="3dp"
                        android:textColor="@color/font19"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <include layout="@layout/line_thin"/>
                <ListView
                    android:id="@+id/sku_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="0.5dp"
                    android:divider="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="服装格子增项x0"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="付费延期服务"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/yanqi"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/select_0_long"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="付费延期服务以3天为1个计费周期，不足1个周期的以1个周期计算，1个计费周期￥30.00"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textSize="9sp"
                android:textColor="@color/font20"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/yanqi_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="延期至"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择延期时间"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/font20"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_back"
                    android:padding="3dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="付费延期服务"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+￥"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:textColor="#ef1e1e"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="租赁押金将在您归还服装后自动退还"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textSize="9sp"
                android:textColor="@color/font20"
                android:gravity="center_vertical"/>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:id="@+id/youhui"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="优惠券"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-￥"
                    android:paddingLeft="10dp"
                    android:textColor="#ef1e1e"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_back"
                    android:padding="3dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="留言"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/to_say"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="11sp"
                    android:background="@null"
                    android:hint="选填，可填写您对订单的附加要求"
                    android:padding="5dp"
                    android:textColor="@color/font20"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <include layout="@layout/line_thin"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="总金额"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥0.00"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="付费延期服务"
                    android:paddingLeft="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/more_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+￥0.00"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="租赁押金"
                    android:paddingLeft="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+￥300.00"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="优惠券"
                    android:textSize="11sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-￥10.00"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="会员折扣"
                    android:textSize="11sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/member"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-￥0.00"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="运费"
                    android:textSize="11sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/express"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+￥0.00"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/font19"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <include layout="@layout/line"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/line"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计:￥"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="@color/font19"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交订单"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_gravity="center"
            android:background="#383737"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>
