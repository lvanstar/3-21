<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <RelativeLayout
        style="@style/Title"
        android:background="@color/title_bg">

        <include
            layout="@layout/layout_back"/>

        <TextView
            android:id="@+id/order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="@dimen/big_size"
            android:textColor="@color/font19"
            android:layout_centerInParent="true"/>
        <include
            layout="@layout/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/order_details_code_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号:123456789123456"
                            android:textColor="@color/font19"
                            android:textSize="@dimen/small_size"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/order_details_times_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间:2017/1/12 20:12:30"
                            android:textColor="@color/font20"
                            android:textSize="@dimen/small_size"
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/order_details_code_Tv"
                            android:layout_marginLeft="15dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/order_details_status_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/middle_size"
                        android:background="@drawable/violet_round_shap"
                        android:textColor="@color/white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/xian"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/order_details_cancelRl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/order_details_tv001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消原因:"
                        android:textColor="@color/font19"
                        android:textSize="@dimen/middle_size"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/order_details_cancelTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我不想买了"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/middle_size"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/order_details_tv001"
                        android:textColor="@color/light_gray"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/xian"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/make_order_address_Ll"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/Rl01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/tv_dingwei222"
                            android:layout_width="28dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/map"
                            android:scaleType="fitCenter"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_dingwei222">

                            <TextView
                                android:id="@+id/order_details_addressTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/order_details_nameTv"
                                android:text="收货地址：上海市镇怒江北路598号4楼5-1号"
                                android:textColor="@color/font19"
                                android:textSize="@dimen/middle_size" />

                            <TextView
                                android:id="@+id/order_details_nameTv"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/order_details_addressTv"
                                android:text="收货人：李益雄"
                                android:textColor="@color/font19"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textSize="@dimen/middle_size" />

                            <TextView
                                android:id="@+id/order_details_phoneTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textColor="@color/font19"
                                android:textSize="@dimen/middle_size" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/right_back" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/xian"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/font22">

                    <TextView
                        android:id="@+id/order_details_time_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租赁日期:2017/1/12-2017/1/14"
                        android:textColor="@color/font20"
                        android:textSize="@dimen/middle_size"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <ListView
                        android:id="@+id/order_details_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:divider="@null"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <TextView
                            android:id="@+id/order_details_mumber_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服装格子增项 * 3"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/order_details_mumberPrice_Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font19"
                            android:textSize="@dimen/middle_size"
                            android:text="¥ 0.00"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xian"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xian"
                           android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="付费延期服务"
                            android:textColor="@color/font19"
                            android:textSize="@dimen/middle_size"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/order_details_out_chooseTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已选择"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/light_gray"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/order_detail_out_Rl"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="延长至"
                            android:textColor="@color/font19"
                            android:textSize="@dimen/middle_size"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/order_detail_out_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017/1/23(2个周期,¥60)"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/light_gray"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/xian"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付费延期服务以7天为1个计费周期，不足1个周期的以1个周期计算，1个计费周期￥30.00"
                        android:textColor="@color/font20"
                        android:textSize="@dimen/middle_size"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="7dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/xian"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/order_detail_001Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="留言"
                        android:textColor="@color/font19"
                        android:textSize="@dimen/middle_size"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/order_detail_remarkTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="希望及时发货哦!"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/middle_size"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/order_detail_001Tv"
                        android:textColor="@color/light_gray" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/xian"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总金额"
                            android:textSize="@dimen/big_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_totalPriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥0.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/order_detail_longPriceRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="付费延期服务"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_longPriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+¥0.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/order_detail_depositRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务押金"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_depositTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+¥300.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/order_detail_discountRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_discountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-¥10.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/colorAccent"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/order_detail_vipRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员折扣"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_vipTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-¥0.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                        <TextView
                            android:id="@+id/order_detail_shipTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+¥0.00"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/middle_size"
                            android:textColor="@color/font19"/>
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/white">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/order_details_price_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计: ¥290.00"
                    android:textSize="@dimen/middle_size"
                    android:textColor="@color/font19"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    />
                <LinearLayout
                    android:id="@+id/order_detail_timePayLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/order_details_price_Tv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font19"
                        android:text="付款剩余时间:"
                        android:textSize="@dimen/middle_size"/>
                    <TextView
                        android:id="@+id/order_details_Timer_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28分钟30秒钟"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/middle_size"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/order_detail_StatusRl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/order_details_cancel_Tv"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="取消订单"
                        android:background="@drawable/black_round_shap"
                        android:textColor="@color/font19"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/big_size" />
                    <TextView
                        android:id="@+id/order_details_pay_Tv"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="去支付"
                        android:background="@color/font19"
                        android:textColor="@color/white"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/big_size" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>