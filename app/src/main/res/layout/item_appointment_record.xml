<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="到店时间"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-23 10:30"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="所在城市"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="门店"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京西路门店"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="预约类型"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="婚纱试穿"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="试衣人数"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kevin 先生"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15111296292"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="@color/gray"
                android:textSize="@dimen/middle_size" />

            <TextView
                android:id="@+id/item_record_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/middle_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/xian"/>
    </LinearLayout>
</LinearLayout>
