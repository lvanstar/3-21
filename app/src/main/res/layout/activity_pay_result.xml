<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 支付结果页 -->
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--横的线-->
    <include layout="@layout/line" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@mipmap/zf_fail" />
    <!--android:src="@mipmap/zf_sucess"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="支付成功"
        android:textColor="@color/__picker_black_40"
        android:textSize="@dimen/big_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="支付失败返回的错误信息"
        android:textColor="@color/__picker_black_40"
        android:textSize="@dimen/big_size" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_margin="30dp"
        android:background="@color/xian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="订单号：245678053345345"
        android:textColor="@color/gray"
        android:textSize="@dimen/big_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="恭喜！您已经成功购买'女神卡-月卡' \n 是否激活该卡 "
            android:textColor="@color/gray"
            android:textSize="@dimen/big_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tv_textview_black_bg"
            android:gravity="center"
            android:text="立即激活"
            android:textColor="@color/white"
            android:textSize="@dimen/big_size" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tv_textview_gray"
            android:gravity="center"
            android:text="暂不激活"
            android:textColor="@color/gray"
            android:textSize="@dimen/big_size" />

    </LinearLayout>

</LinearLayout>