<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!--登录页面-->
    <com.qiansong.msparis.app.commom.selfview.ETitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--横的线-->
    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">


        <EditText
            android:id="@+id/login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="5dp"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/big_size" />

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingBottom="5dp"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/big_size" />

                <include layout="@layout/line" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/tv_textview_gray"
                android:clickable="false"
                android:gravity="center"
                android:text="获取验证码"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录后表示接受"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/login_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_Voice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收不到短信？"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/login_Voice_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用语音验证码"
                android:textColor="@color/__picker_black_40"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/tv_textview_white_bg"
            android:clickable="false"
            android:gravity="center"
            android:text="登陆"
            android:textColor="@color/gray"
            android:textSize="@dimen/big_size" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/xian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="第三方登陆"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/xian" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/login_qq"
                android:gravity="center"
                android:text="腾讯QQ"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/login_wei_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/login_weixin"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/login_wei_bo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/login_weibo"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>